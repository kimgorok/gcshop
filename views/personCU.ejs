<% if(create =='yes' ){%>
<div class="container">
  <h2>사용자 입력</h2>
  <form action="/person/create_process" method="post">
    <div class="mb-3">
      <label class="form-label" for="id">로그인 아이디</label>
      <input
        class="form-control"
        type="text"
        name="loginid"
        style="width: 300px"
      />
    </div>
    <div class="mb-3">
      <label class="form-label" for="id">비밀번호</label>
      <input
        class="form-control"
        type="text"
        name="password"
        style="width: 300px"
      />
    </div>
    <div class="mb-3">
      <label class="form-label" for="id">이름</label>
      <input
        class="form-control"
        type="text"
        name="name"
        style="width: 300px"
      />
    </div>
    <div class="mb-3">
      <label class="form-label" for="id">주소</label>
      <input
        class="form-control"
        type="text"
        name="address"
        style="width: 300px"
      />
    </div>
    <div class="mb-3">
      <label class="form-label" for="id">전화번호</label>
      <input class="form-control" type="text" name="tel" style="width: 300px" />
    </div>
    <div class="mb-3">
      <label class="form-label" for="id">생년월일</label>
      <input
        class="form-control"
        type="text"
        name="birth"
        style="width: 300px"
      />
    </div>
    <div class="mb-3" hidden="true">
      <label class="form-label" for="id">클래스</label>
      <input
        class="form-control"
        type="text"
        name="class"
        style="width: 300px"
        value="02"
      />
    </div>
    <div class="mb-3" hidden="true">
      <label class="form-label" for="id">포인트</label>
      <input
        class="form-control"
        type="text"
        name="point"
        style="width: 300px"
        value="0"
      />
    </div>
    <button class="btn btn-outline-primary btn-sm" type="submit">입력</button>
  </form>
</div>
<% }else { %>
<div class="container">
  <h2>사용자 수정</h2>
  <form action="/person/update_process" method="post">
    <div class="mb-3">
      <label class="form-label" for="id">로그인 아이디</label>
      <input
        class="form-control"
        type="text"
        name="loginid"
        style="width: 300px"
        value="<%= results[0]?.loginid %>"
        id="loginid"
      />
    </div>
    <div class="mb-3">
      <label class="form-label" for="id">비밀번호</label>
      <input
        class="form-control"
        type="text"
        name="password"
        style="width: 300px"
        value="<%= results[0]?.password %>"
      />
    </div>
    <div class="mb-3">
      <label class="form-label" for="id">이름</label>
      <input
        class="form-control"
        type="text"
        name="name"
        style="width: 300px"
        value="<%= results[0]?.name %>"
      />
    </div>
    <div class="mb-3">
      <label class="form-label" for="id">주소</label>
      <input
        class="form-control"
        type="text"
        name="address"
        style="width: 300px"
        value="<%= results[0]?.address %>"
      />
    </div>
    <div class="mb-3">
      <label class="form-label" for="id">전화번호</label>
      <input
        class="form-control"
        type="text"
        name="tel"
        style="width: 300px"
        value="<%= results[0]?.tel %>"
      />
    </div>
    <div class="mb-3">
      <label class="form-label" for="id">생년월일</label>
      <input
        class="form-control"
        type="text"
        name="birth"
        id="birth"
        style="width: 300px"
        value="<%= results[0]?.birth %>"
      />
    </div>
    <div class="mb-3">
      <label class="form-label" for="id">클래스</label>
      <input
        class="form-control"
        type="text"
        name="class"
        id="class"
        style="width: 300px"
        value="<%= results[0]?.class %>"
      />
    </div>
    <div class="mb-3">
      <label class="form-label" for="id">포인트</label>
      <input
        class="form-control"
        type="text"
        name="point"
        style="width: 300px"
        value="<%= results[0]?.point %>"
      />
    </div>
    <button class="btn btn-outline-primary btn-sm" type="submit">입력</button>
  </form>
</div>
<%}%>
